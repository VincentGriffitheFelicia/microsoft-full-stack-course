@page "/events/{Id:int}"
@inject NavigationManager NavigationManager

<h3>Event Details</h3>

@if (evt == null)
{
    <p>Event not found.</p>
}
else
{
    <div class="details">
        <label>Name</label>
        <input class="form-control" @bind="evt.Name" />
        @if (string.IsNullOrWhiteSpace(evt.Name))
        {
            <div class="text-danger">Name is required.</div>
        }

        <label>Date</label>
        <input type="date" class="form-control" value="@dateString" @onchange="UpdateDateFromInput" />
        @if (evt.Date == default)
        {
            <div class="text-danger">Please select a valid date.</div>
        }

        <label>Location</label>
        <input class="form-control" @bind="evt.Location" />
        @if (string.IsNullOrWhiteSpace(evt.Location))
        {
            <div class="text-danger">Location is required.</div>
        }

        <label>Description</label>
        <textarea class="form-control" @bind="evt.Description"></textarea>
        @if (string.IsNullOrWhiteSpace(evt.Description))
        {
            <div class="text-danger">Description is required.</div>
        }

        <div class="mt-2">
            <button class="btn btn-primary" @onclick="Save" disabled="@(!IsFormValid())">Save</button>
            @if (SessionService.IsLoggedIn)
            {
                var alreadyRegistered = AttendanceService.GetByUserId(SessionService.CurrentUser!.Id).Any(a => a.EventId == Id);
                if (alreadyRegistered)
                {
                    <span class="text-success">You are registered for this event.</span>
                }
                else
                {
                    <button class="btn btn-outline-secondary" @onclick="GoRegister">Register</button>
                }
            }
            else
            {
                <a href="/login" class="btn btn-outline-secondary">Login to Register</a>
            }
        </div>
    </div>
}

@code {
    [Parameter] public int Id { get; set; }
    private EventModel? evt;
    private string dateString = string.Empty;

    protected override void OnInitialized()
    {
        evt = EventService.GetById(Id);
        if (evt != null) dateString = evt.Date.ToString("yyyy-MM-dd");
    }

    private void UpdateDateFromInput(ChangeEventArgs e)
    {
        if (evt == null) return;
        if (DateTime.TryParse(e?.Value?.ToString(), out var d))
        {
            evt.Date = d;
        }
    }

    private bool IsFormValid()
    {
        return evt != null &&
               !string.IsNullOrWhiteSpace(evt.Name) &&
               evt.Date != default &&
               !string.IsNullOrWhiteSpace(evt.Location) &&
               !string.IsNullOrWhiteSpace(evt.Description);
    }

    private void Save()
    {
        if (!IsFormValid()) return;
        try
        {
            if (evt != null) EventService.Update(evt);
            NavigationManager.NavigateTo("/events");
        }
        catch (Exception ex)
        {
            // In a real app, show error message
            Console.WriteLine($"Error saving event: {ex.Message}");
        }
    }

    private void GoRegister()
    {
        if (evt != null) NavigationManager.NavigateTo($"/register/{evt.Id}");
    }
}
